<div class="short-item">
	<div class="short-cols fx-row">
		[image-1]<a class="short-img img-fit" href="{full-link}"><img src="{image-1}" alt="{title}"></a>[/image-1]
		<div class="short-desc fx-1">
			<a class="short-title" href="{full-link}">{title}</a>
			<div class="short-text">{short-story limit="300"}...</div>
		</div>
	</div>
	<div class="short-meta fx-row fx-middle">
		<div class="short-meta-item"><span class="fal fa-folder"></span>{category}</div>
		<div class="short-meta-item fx-1"><span class="fal fa-calendar-alt"></span>{date=d.m.y}</div>
		<div class="short-meta-item"><span class="fal fa-eye"></span>{views}</div>
		<div class="short-meta-item"><span class="fal fa-comment"></span>{comments-num}</div>
	</div>
</div>