<div class="short-thumb">
	<a class="short-thumb-img img-resp img-fit anim" href="{full-link}">
		<img src="{image-1}" alt="{title}">
	</a>
	<a class="short-title short-thumb-title anim" href="{full-link}">{title}</a>
	<div class="short-text">{short-story limit="120"}...</div>
	<div class="short-meta fx-row fx-middle short-thumb-meta-btm">
		<div class="short-meta-item fx-1 nowrap"><span class="fal fa-calendar-alt"></span>{date=d.m.y}</div>
		<div class="short-meta-item"><span class="fal fa-eye"></span>{views}</div>
		<div class="short-meta-item"><span class="fal fa-comment"></span>{comments-num}</div>
	</div>
</div>